{
  "name": "openstudio-mcp-server",
  "version": "0.1.0",
  "description": "OpenStudio MCP Server for AI assistant integration",
  "main": "dist/index.js",
  "bin": {
    "openstudio-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "vitest run --config vitest.unit.config.mts",
    "test:all": "vitest run",
    "test:timeout": "./scripts/run-tests.sh",
    "test:fix": "node ./scripts/fix-hanging-tests.js",
    "test:fix-specific": "node ./scripts/fix-specific-tests.js",
    "test:individual": "node ./scripts/run-tests-individually.js",
    "test:debug-all": "node ./scripts/debug-all-tests.js",
    "test:unit": "vitest run test/ci-pass.test.ts --config vitest.unit.config.mts --reporter=basic",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "pkg": "pkg .",
    "package": "npm run build && npm run pkg",
    "package:win": "npm run build && pkg . --targets node18-win-x64 --output bin/openstudio-mcp-server-win.exe",
    "package:mac": "npm run build && pkg . --targets node18-macos-x64,node18-macos-arm64 --output bin/openstudio-mcp-server-mac",
    "package:linux": "npm run build && pkg . --targets node18-linux-x64 --output bin/openstudio-mcp-server-linux",
    "package:all": "npm run build && npm run package:win && npm run package:mac && npm run package:linux",
    "ci": "npm ci && npm run build"
  },
  "keywords": [
    "openstudio",
    "mcp",
    "energy-modeling",
    "building-simulation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "ajv": "^8.12.0",
    "axios": "^1.10.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "fastify-cors": "^6.1.0",
    "fastify-swagger": "^5.2.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "pkg": "^5.8.1",
    "prettier": "^3.1.0",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/**/*.node",
      "templates/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-linux-x64"
    ],
    "outputPath": "bin"
  }
}
